<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_train_arrival"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.harsh.sahayak1.activity.TrainArrivalActivity"
    android:background="#E5E8E6">
    <include
        android:id="@+id/my_toolbar"
        layout="@layout/toolbar_main" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/my_toolbar">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:elevation="7dp"
        android:background="@color/cardview_light_background">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/headingStationCode"
                android:text="@string/stationCode"
                android:textSize="18sp"
                android:textColor="@color/cardview_dark_background"
                android:layout_marginStart="20dp"
                android:layout_marginTop="80dp"/>
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/stationCode"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                android:layout_marginTop="70dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@+id/headingStationCode"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/headingHours"
                android:text="@string/hours"
                android:textSize="18sp"
                android:textColor="@color/cardview_dark_background"
                android:layout_below="@id/headingStationCode"
                android:layout_marginStart="35dp"
                android:layout_marginTop="80dp"/>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:layout_toEndOf="@+id/headingHours"
                android:layout_below="@+id/stationCode"
                android:layout_marginStart="50dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="50dp">
            </Spinner>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/submitButton"
                android:text="@string/submit"
                android:textStyle="bold"
                android:textColor="@color/cardview_light_background"
                android:background="@drawable/my_button"
                android:layout_below="@+id/headingHours"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginBottom="140dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</ScrollView>
</RelativeLayout>
