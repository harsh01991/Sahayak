<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details_train_arrival"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.harsh.sahayak1.activity.DetailsTrainArrivalActivity">

     <include
    android:id="@+id/my_toolbar"
    layout="@layout/toolbar_main" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/headingTotalTrain"
        android:text="@string/totalTrain"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/my_toolbar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalTrain"
        android:layout_toEndOf="@+id/headingTotalTrain"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="#F76A7A"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerView"
        android:layout_below="@+id/headingTotalTrain">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
