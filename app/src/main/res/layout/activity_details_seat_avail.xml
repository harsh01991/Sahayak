<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details_seat_avail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.harsh.sahayak1.activity.DetailsSeatAvailActivity"
    android:background="#E5E8E6">

    <include
        android:id="@+id/my_toolbar"
        layout="@layout/toolbar_main" />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardView1"
        android:layout_margin="5dp"
        android:background="@color/cardview_light_background"
        android:layout_below="@+id/my_toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/headingTrainNumber"
            android:text="@string/trainNumber"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seatAvailTrainNo"
            android:layout_marginTop="35dp"
            android:text=""
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/headingTrainNumber"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/headingTrainName"
                android:text="@string/trainName"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_below="@+id/headingTrainNumber"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seatAvailTrainName"
                android:layout_marginTop="25dp"
                android:text=""
                android:layout_below="@+id/seatAvailTrainNo"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@+id/headingTrainName"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/headingFromStation"
                android:text="@string/stationfrom"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_below="@+id/headingTrainName"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seatAvailFrom"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/headingTrainName"
                android:text=""
                android:layout_marginStart="18dp"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@+id/headingFromStation"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/headingToStation"
                android:text="@string/stationTo"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_below="@+id/headingFromStation"
                android:layout_marginTop="20dp"
                android:layout_marginStart="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seatAvailTo"
                android:text=""
                android:layout_marginTop="25dp"
                android:layout_below="@+id/seatAvailFrom"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@+id/headingToStation" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/headingQuota"
                android:text="@string/quota"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_below="@+id/headingToStation"
                android:layout_marginTop="20dp"
                android:layout_marginStart="60dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seatAvailQuota"
                android:text=""
                android:layout_marginTop="25dp"
                android:layout_below="@+id/seatAvailTo"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@+id/headingQuota" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/headingClass"
                android:text="@string/className"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_below="@+id/headingQuota"
                android:layout_marginTop="20dp"
                android:layout_marginStart="60dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seatAvailClass"
                android:text=""
                android:layout_marginTop="25dp"
                android:layout_below="@+id/seatAvailQuota"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="10dp"
                android:layout_toEndOf="@+id/headingClass" />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tableLayout"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/headingClass">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/headingSeatAvailDate"
                        android:text="Date"
                        android:layout_marginStart="40dp"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/headingSeatAvail"
                    android:text="Availability"
                    android:layout_marginStart="40dp"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/SeatAvailDate1"
                        android:text=""
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="40dp"
                        android:textSize="18sp"
                        android:textColor="#ffff0000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/SeatAvailStatus1"
                        android:text=""
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="40dp"
                        android:textSize="18sp"
                        android:textColor="#ffff0000" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/SeatAvailDate2"
                        android:text=""
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="40dp"
                        android:textSize="18sp"
                        android:textColor="#ffff0000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/SeatAvailStatus2"
                        android:text=""
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="40dp"
                        android:textSize="18sp"
                        android:textColor="#ffff0000" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/SeatAvailDate3"
                        android:text=""
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="40dp"
                        android:textSize="18sp"
                        android:textColor="#ffff0000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/SeatAvailStatus3"
                        android:text=""
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="40dp"
                        android:textSize="18sp"
                        android:textColor="#ffff0000" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/SeatAvailDate4"
                        android:text=""
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="40dp"
                        android:textSize="18sp"
                        android:textColor="#ffff0000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/SeatAvailStatus4"
                        android:text=""
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="40dp"
                        android:textSize="18sp"
                        android:textColor="#ffff0000" />
                </TableRow>

            </TableLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
